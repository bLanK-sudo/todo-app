<%- include('partials/header') -%>
<div class="bg"></div>
<div class="container">
    <div class="title">
        <h1 class="todo">TODO</h1>
        <img class="theme" name="dark" src="../images/icon-sun.svg" alt="theme-changer">
    </div>
    <div>
        <div class="type">
            <label class="input-type">
                <input type="checkbox" class="checkbox">
                <div class="check"></div>
                <form class="line" method="POST" action="/all">
                    <input type="text" name="newItem" autocomplete="off" required>
                    <input type="submit" class="submit-type" value="+">
                </form>
            </label>
        </div>
        <div class="list">
            <ul>
                <% newListItem.forEach(e => { %>
                <li>
                    <label>
                        <form action="/all/completed" method="POST">
                            <input type="checkbox" class="checkbox">
                            <button name="checked" value="<%=e.listItem%>" class="check" type="submit"></button>         
                        </form>
                        <p class="line"><%=e.listItem%></p>
                        <form action="/all/delete" method="post">
                            <button name="deleteItem" value="<%=e.id%>" type="submit"><img class="cross"
                                    src="./images/icon-cross.svg" alt="delete-icon"></button>
                        </form>
                    </label>

                </li>
                <hr>
                <% }) %>
                <% existingListItem.forEach(e => { %>
                    <li>
                        <label class="label-completed">
                            <input type="checkbox" class="hidden">
                            <div class="checkbox-completed"></div>
                            <p class="line-completed"><%=e.listItem%></p>
                            <div class="icon">
                                <form action="/del" method="post">
                                    <button name="delItem" value="<%=e.id%>" type="submit"><img class="cross"
                                            src="./images/icon-cross.svg" alt="delete-icon"></button>
                                </form>
                            </div>
                        </label>
    
                    </li>
                    <hr>
                    <% }) %>
            </ul>
            <div class="footer">
                <div>
                    <p><%=newListItem.length + existingListItem.length%> items left</p>
                </div>
                <div class="status">
                    <p><a class="all" href="/all">All</a></p>
                    <p><a href="/">Active</a></p>
                    <p><a href="/completed">Completed</a></p>
                </div>
                <div>
                    <form action="/d" method="post">
                        <button type="submit"><p>Clear Completed</p></button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
<%- include('partials/footer') -%>